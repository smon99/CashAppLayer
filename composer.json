{
    "require": {
        "ext-json": "*",
        "twig/twig": "^3.7",
        "ext-http": "*",
        "ext-pdo": "*",

        "php": ">=8.1"
    },
    "autoload": {
        "psr-4": {
            "Test\\": "tests/",
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^10.3",
        "infection/infection": "^0.27.6"
    },
    "scripts": {
        "phpunit": [
            "XDEBUG_MODE=coverage php vendor/bin/phpunit --coverage-html coverage"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
